<!DOCTYPE html>
<html>
  <head>
    <title>BeFoundApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
      <% if current_user %>
        <%= link_to current_user.username, user_path(current_user) %> signed in
        <%= button_to 'Log out', session_path, method: :delete %>
      <% end %>
  
      <% if flash[:notice].present? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
  
      <% if flash[:error].present? %>
        <div class="errors">
          <b>Errors:</b>
          <%= flash[:error] %>
        </div>
      <% end %>

      <p>BeFound</p>
      <p>User Login</p>
      <p>User Logout</p>
      <p>Create Account</p>
      <p><%= link_to "add post",new_post_path %></p>

  <body>
    <%= yield %>
  </body>
</html>
