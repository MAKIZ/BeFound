<div class="container pt-4">
  <%= form_for @post do |f| %>
    <form>
      <div class="form-row">
        <div class="form-group col-sm-12">
          <%= f.label :name, class: "col-form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Firstname and Lastname"%>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-sm-12 col-lg-6">
          <%= f.label :missing_from, class: "col-form-label" %>
          <%= f.text_field :missing_from, class: "form-control", placeholder: "City, State"%>
        </div>
        <div class="form-group col-sm-12 col-lg-6">
          <%= f.label :date_missing, class: "col-form-label" %>
          <%= f.text_field :date_missing, class: "form-control"%>
        </div>
      </div>
      <div class="form-row">
          <div class="form-group col-sm-12 col-lg-4">
            <%= f.label :dob, class: "col-form-label" %>
            <%= f.text_field :dob, class: "form-control"%>
          </div>
          <div class="form-group col-sm-12 col-lg-4">
            <%= f.label :sex, class: "col-form-label" %>
            <!-- <%= select_tag :sex,  class: "form-control"%> -->
            <%= f.select :sex, options_for_select([["Select One", ""], "Male", "Female", "Other"]), class: "form-control" %>
          </div>
          <div class="form-group col-sm-12 col-lg-4">
            <%= f.label :ethnicity, class: "col-form-label" %>
            <%= f.text_field :ethnicity, class: "form-control"%>
          </div>
      </div>
      <div class="form-row">
          <div class="form-group col-sm-12 col-lg-3">
            <%= f.label :height, class: "col-form-label" %>
            <%= f.text_field :height, class: "form-control", placeholder: "in centimeter"%>
          </div>
          <div class="form-group col-sm-12 col-lg-3">
            <%= f.label :weight, class: "col-form-label" %>
            <%= f.text_field :weight, class: "form-control", placeholder: "in gms"%>
          </div>
          <div class="form-group col-sm-12 col-lg-3">
            <%= f.label :eyes, class: "col-form-label" %>
            <%= f.text_field :eyes, class: "form-control"%>
          </div>
          <div class="form-group col-sm-12 col-lg-3">
            <%= f.label :hair, class: "col-form-label" %>
            <%= f.text_field :hair, class: "form-control"%>
          </div>
      </div>
      <div class="form-row">
          <div class="form-group col-sm-12">
            <%= f.label :photo, class: "col-form-label" %>
            <%= f.text_field :photo, class: "form-control", placeholder: "Image goes here"%>
          </div>
        </div>
      <div class="form-row">
          <div class="form-group col">
            <%= f.label :other, class: "col-form-label" %>
            <%= f.text_area :other, class: "form-control", rows: "10" %>
          </div>
      </div>
   
      <%= f.submit class: "btn btn-primary", value: "Submit" %>
    </form>
  </div>
<% end %>
