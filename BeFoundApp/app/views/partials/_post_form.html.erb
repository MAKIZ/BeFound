<br><br>

<div class="container">
  <%= form_for @post do |f| %>
    <form>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :name, class: "col-form-label" %>
            <%= f.text_field :name, class: "form-control"%>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :photo, class: "col-form-label" %>
            <%= f.text_field :photo, class: "form-control"%>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :date_of_birth, class: "col-form-label" %>
            <%= f.text_field :dob, class: "form-control"%>
        </div>
      </div>
      <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :last_contact_date, class: "col-form-label" %>
              <%= f.text_field :last_contact_date, class: "form-control"%>
          </div>
        </div>
      <div class="form-row">
          <div class="form-group col-md-3">
            <%= f.label :sex, class: "col-form-label" %>
              <%= f.text_field :sex, class: "form-control"%>
          </div>
          <div class="form-group col-md-3">
              <%= f.label :complexion, class: "col-form-label" %>
                <%= f.text_field :complexion, class: "form-control"%>
            </div>
          
        </div>
      <div class="form-row">
          <div class="form-group col-md-6">
            <%= f.label :description, class: "col-form-label" %>
              <%= f.text_area :description, class: "form-control", rows: "10" %>
          </div>
        </div>
      <%= f.submit class: "btn btn-primary" %>
    </form>
  </div>
<% end %>
